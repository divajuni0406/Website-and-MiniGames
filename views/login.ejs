<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/login-formGame/fonts/icomoon/style.css">
  <link rel="icon" href="/login-formGame/images/logo1.png">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/login-formGame/css/bootstrap.min.css">
  <!-- Style -->
  <link rel="stylesheet" href="/login-formGame/css/style.css">
  <title>Login Game Suit</title>
</head>

<body>


  <div class="d-lg-flex half">
    <div class="bg order-1 order-md-2" id="background"></div>
    <div class="contents order-2 order-md-1">

      <div class="container" id="form-area">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-7 py-5 px-5" id="form-inside">
            <h3>Login to <strong>Game Suit</strong></h3>
            <p class="mb-4">Play one of the most populer traditional game with computer or your friends !</p>
            <form action="#" method="post">
              <div class="form-group first">
                <label for="username">Username</label>
                <input type="text" class="form-control" name="username" placeholder="your-email@gmail.com"
                  id="username">
              </div>
              <div class="form-group last mb-3">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Your Password" id="password">
              </div>

              <div class="d-flex mb-5 align-items-center">
                <label class="control control--checkbox mb-0"><span class="caption">Remember me</span>
                  <input type="checkbox" checked="checked" />
                  <div class="control__indicator"></div>
                </label>
                <span class="ml-auto"><a href="#" class="forgot-pass">Forgot Password</a></span>
              </div>
              <input type="submit" id="loginBtn" value="Log In" class="btn btn-block btn-primary">
            </form>
          </div>
        </div>
      </div>
    </div>


  </div>



  <script src="/login-formGame/js/jquery-3.3.1.min.js"></script>
  <script src="/login-formGame/js/popper.min.js"></script>
  <script src="/login-formGame/js/bootstrap.min.js"></script>
  <script src="/login-formGame/js/main.js"></script>
  <script>
    loginBtn.addEventListener("click", (e) => {
      e.preventDefault();
      let username = document.getElementById("username").value;
      let password = document.getElementById("password").value;

      fetch("/register", {
        method: "POST",
        headers: {
          "Content-type": "application/json",
        },
        body: JSON.stringify({
          username,
          password
        })
      }).then((response) => {
        return response.json()
      }).then((result) => {
        alert(result.message)
        if (result.statusCode === 200) {
          localStorage.setItem("username", result.resultData.username)
          return window.location.href = "/";
        }
      }).catch((error) => {
        console.log(error)
      })
    })
  </script>
</body>

</html>